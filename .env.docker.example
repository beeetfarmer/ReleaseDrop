# PostgreSQL Database (Required)
POSTGRES_DB=releasedrop
POSTGRES_USER=releasedrop
POSTGRES_PASSWORD=change_this_secure_password

# Spotify API Credentials (Required)
# Get these from: https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here

# NOTIFICATIONS (Optional - choose one or skip both)
# Without these, app works fine but you won't get push notifications
# You'll need to check the app manually for new releases

# Gotify Notification Service
# Setup: https://gotify.net/docs/install
GOTIFY_URL=http://your-gotify-server:port
GOTIFY_TOKEN=your_gotify_app_token_here

# OR Ntfy Notification Service (Alternative to Gotify)
# You can use the public ntfy.sh server or self-host
# Setup: https://docs.ntfy.sh
NTFY_URL=https://ntfy.sh
NTFY_TOPIC=your_unique_topic_name_here
NTFY_USERNAME=
NTFY_PASSWORD=

# INTEGRATIONS (All Optional)

# Last.fm Integration
# Import your top artists from Last.fm
# Get API key: https://www.last.fm/api/account/create
LASTFM_API_KEY=your_lastfm_api_key_here
LASTFM_USERNAME=your_lastfm_username_here

# Jellyfin Integration
# Check if releases are in your Jellyfin library
JELLYFIN_URL=http://your-jellyfin-server:8096
JELLYFIN_API_KEY=your_jellyfin_api_key_here

# Plex Integration
# Check if releases are in your Plex library
PLEX_URL=http://your-plex-server:32400
PLEX_TOKEN=your_plex_token

# APPLICATION SETTINGS

# When to run daily release check (24-hour format)
RELEASE_CHECK_TIME=09:00

# How many months back to fetch releases
RELEASE_MONTHS_BACK=3

# Timezone for scheduling (see: https://en.wikipedia.org/wiki/List_of_tz_database_time_zones)
TIMEZONE=UTC

# CORS Configuration
# Comma-separated list of allowed origins for API access
# For local access: http://localhost:3000
# For Tailscale: add http://your-tailscale-hostname:3000
# Example: http://localhost:3000,http://your-tailscale-hostname:3000
CORS_ORIGINS=http://localhost:3000
